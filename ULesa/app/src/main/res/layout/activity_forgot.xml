<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotActivity"
    android:background="@drawable/nenlogin"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="258dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Lấy lại mật khẩu"
            android:textColor="@color/xanhdam"
            android:textSize="35sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/size10dp"
                android:background="@drawable/iconmail"></ImageView>

            <EditText
                android:id="@+id/txt_forgot_edit_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_txt"
                android:drawablePadding="@dimen/size10dp"
                android:hint="@string/forgot"
                android:padding="@dimen/size10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nhập Gmail để nhận được mật khẩu mới!"
            android:textColor="@color/xanhnhat" />

        <Button
            android:id="@+id/btnxacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10dp"
            android:background="@drawable/btn"
            android:text="Xác Nhận" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>