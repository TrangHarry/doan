<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenn"
    tools:context=".ui.order.OrderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Sửa thông tin phòng"
            android:textSize="30sp"
            android:textColor="@color/xanhdam"
            android:textStyle="bold" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_roomedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/iconhome"
                        android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Tên Phòng"
                            android:textColor="@color/xanhdam"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                        <EditText
                            android:id="@+id/text_roomname"
                            android:layout_width="245dp"
                            android:layout_height="40dp"
                            android:layout_margin="@dimen/size10dp"
                            android:background="@drawable/custom_txt"
                            android:drawablePadding="@dimen/size10dp"
                            android:hint="Tên Phòng "
                            android:padding="@dimen/size10dp"
                            android:layout_gravity="center"
                            android:textColorHint="@color/grey"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            tools:ignore="InvalidId" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconloc"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Địa chỉ"
                            android:textColor="@color/xanhdam"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_location"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:hint="Địa chỉ "
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconlink"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Link Ảnh"
                            android:textColor="@color/xanhdam"
                            android:layout_gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_image_link"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:hint="Link Ảnh Phòng"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rbtnfemale_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconprice">
                    </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Giá phòng"
                            android:layout_gravity="center"
                            android:textColor="@color/xanhdam"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_price"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Giá Phòng"
                        android:padding="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconreview"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Chi tiết"
                            android:layout_gravity="center"
                            android:textColor="@color/xanhdam"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_review"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Chi Tiết Về Phòng"
                        android:padding="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconlistlink"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10dp"
                        android:text="List link"
                        android:layout_gravity="center"
                        android:textColor="@color/xanhdam"
                        android:textSize="14sp"/>
                </LinearLayout>
                    <EditText
                        android:id="@+id/text_list_image"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Danh sách link ảnh"
                        android:layout_gravity="center"
                        android:padding="@dimen/size10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconstar"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Đánh giá"
                            android:layout_gravity="center"
                            android:textColor="@color/xanhdam"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_evaluate"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Đánh giá"
                        android:padding="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconviewevaluate"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10dp"
                        android:text="Lượt đánh giá"
                        android:textColor="@color/xanhdam"
                        android:layout_gravity="center"
                        android:textSize="14sp"/>
                </LinearLayout>
                    <EditText
                        android:id="@+id/text_view_evaluate"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Số lượt đánh giá"
                        android:layout_gravity="center"
                        android:padding="@dimen/size10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconviewbook"></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size10dp"
                            android:text="Luợt đặt"
                            android:textColor="@color/xanhdam"
                            android:layout_gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/text_view_book"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Số lượt đặt phòng"
                        android:layout_gravity="center"
                        android:padding="@dimen/size10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp">
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/iconu"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10dp"
                        android:text="Số người "
                        android:layout_gravity="center"
                        android:textColor="@color/xanhdam"
                        android:textSize="14sp"/>
                </LinearLayout>
                    <EditText
                        android:id="@+id/text_cus"
                        android:layout_width="245dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/size10dp"
                        android:background="@drawable/custom_txt"
                        android:drawablePadding="@dimen/size10dp"
                        android:hint="Số người quy định"
                        android:layout_gravity="center"
                        android:padding="@dimen/size10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="@dimen/size10dp">
                    <Button
                        android:id="@+id/btn_editroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Sửa phòng"
                        android:layout_gravity="center"
                        android:background="@drawable/btn"/>
                    <Button
                        android:id="@+id/btn_deleteroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Xóa phòng"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size20dp"
                        android:background="@drawable/btn"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>