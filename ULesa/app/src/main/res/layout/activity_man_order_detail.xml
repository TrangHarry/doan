<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nenn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/size10dp"
        android:background="@drawable/custom_layout"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/image_room"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/phongsat1"
            android:layout_margin="@dimen/size10dp"
            />
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:text="@string/room_name"
            android:layout_marginTop="@dimen/size10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/size10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="18sp"
                    android:text="Khách hàng"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/greyd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textSize="18sp"
                    android:text="@string/id_order"
                    android:textColor="@color/greyd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="18sp"
                    android:text="@string/total_payment"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/greyd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Ngày đặt"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/greyd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/status"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/greyd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/user"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_idbill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/id_order"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textSize="18sp"
                    android:text="@string/total_payment"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Ngày đặt"
                    android:layout_marginTop="@dimen/size10dp"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/size10dp"
                    android:text="@string/status"
                    android:textColor="@color/xanhdam"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>