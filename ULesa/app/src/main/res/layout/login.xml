<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/nenlogin">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       tools:ignore="MissingConstraints"
       android:gravity="center"
       android:layout_margin="@dimen/size10dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Đăng Nhập"
          android:textStyle="bold"
          android:textColor="@color/xanhdam"
          android:textSize="40sp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginRight="@dimen/size10dp"
             android:background="@drawable/iconcccd">
         </ImageView>
         <EditText
             android:id="@+id/txtgmail"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@drawable/custom_txt"
             android:drawablePadding="@dimen/size10dp"
             android:hint="@string/gmail"
             android:padding="@dimen/size10dp"
             android:textColorHint="@color/grey"
             android:textColor="@color/black"
             android:singleLine="true" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size10dp">

         <ImageView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginRight="@dimen/size10dp"
             android:background="@drawable/iconlock"/>

         <EditText
             android:id="@+id/txtpassword"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@drawable/custom_txt"
             android:drawablePadding="@dimen/size10dp"
             android:hint="@string/matkhau"
             android:padding="@dimen/size10dp"
             android:password="true"
             android:textColorHint="@color/grey"
             android:textColor="@color/black"
             android:singleLine="true" />
      </LinearLayout>
      <RadioGroup
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
      </RadioGroup>

      <Button
          android:id="@+id/btnlogin"
          android:layout_marginTop="@dimen/size10dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Đăng Nhập"
          android:background="@drawable/btn"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal">

         <TextView

             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:hint="@string/dangkitk"
             android:textColorHint="@color/greyd"></TextView>
         <TextView
             android:id="@+id/register"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:textStyle="bold"
             android:layout_margin="@dimen/size10dp"
             android:text="Đăng ký"
             android:textColorHint="@color/xanhnhat"></TextView>
      </LinearLayout>
      <TextView
          android:id="@+id/forgot"
          android:layout_width="wrap_content"
          android:layout_height="60dp"
          android:drawablePadding="5dp"
          android:hint="Quên mật khẩu?"
          android:textColorHint="@color/greyd"></TextView>
   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>